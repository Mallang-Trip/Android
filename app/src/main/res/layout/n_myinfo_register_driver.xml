<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/driver_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="택시 기사 자격증 증명"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/upload_btn"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="0dp"
        android:text="사진 또는 파일을\n이곳에 업로드 해주세요" />

    <TextView
        android:id="@+id/input_car_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="자동차 정보 입력"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/input_car_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="차종"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <EditText
        android:id="@+id/input_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="번호판"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <EditText
        android:id="@+id/input_friend_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="탑승 가능 인원 수"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/input_car_info2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="활동 가능 지역 선택"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <Button
        android:id="@+id/select_loacl_btn"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:backgroundTint="@android:color/darker_gray"
        android:text="지역 선택" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="175dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/cancle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/black"
            android:text="취소" />

        <Button
            android:id="@+id/complete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="완료" />
    </LinearLayout>

</LinearLayout>
